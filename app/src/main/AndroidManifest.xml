<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dllo.foodgroup">

    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".tools.MyApp"
        android:theme="@style/AppTheme">
        <activity android:name=".main.StartActivity" android:theme="@style/CustomTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".main.MainActivity" android:theme="@style/CustomTitle"/>

        <activity android:name=".foodencyclopedia.search.SearchActivity" android:theme="@style/CustomTitle"/>

        <activity android:name=".main.StrolleatWebActivity" android:theme="@style/CustomTitle"/>
        <activity android:name=".foodencyclopedia.foodmore.FoodMoreActivity" android:theme="@style/CustomTitle"/>
        <activity android:name=".strolleat.homepage.HomepageItemActivity" android:theme="@style/CustomTitle"/>
        <activity android:name=".strolleat.homepage.AdvertActivity" android:theme="@style/CustomTitle"/>
        <activity android:name=".main.LoginActivity" android:theme="@style/CustomTitle"/>
        <activity android:name=".foodencyclopedia.compare.CompareActivity" android:theme="@style/CustomTitle"/>
    </application>

</manifest>